nutmeg = hsl(14, 45%, 36%)
dark-raspberry = hsl(332, 51%, 32%)
white = hsl(0, 0%, 100%)
rose-white = hsl(330, 100%, 98%)
eggshell = hsl(30, 54%, 90%)
light-grey = hsl(30, 18%, 87%)
wenge-brown = hsl(30, 10%, 34%)
dark-charcoal = hsl(24, 5%, 18%)

*,*::before,*::after
    margin: 0
    padding: 0
    box-sizing: border-box
    transition: all 250ms ease;

body
    display: flex
    justify-content: center
    background-color: eggshell
    font-size: 16px

.card
    padding-bottom: 30px
    background-color: white
    width 46rem

figure
    display inline-flex
    img 
        width 100%
        object-fit cover
header
    display flex
    flex-direction column
    gap: 24px
    margin-top 36px
    margin-left: 32px 
    margin-right: 32px 
    h1
        font-family: "Young Serif", serif
        font-weight: 400
        font-style: normal
        font-size: 36px
        color: dark-charcoal 
        line-height: 100%;
    p
        font-size: 1rem
        font-family: Outfit, sans-serif
        color: wenge-brown
        line-height: 150%
        font-weight: 400

ul
    list-style-type: disc
    list-style-position: inside
li
    font-size: 16px
    font-family: Outfit, sans-serif
    color:wenge-brown
    line-height: 150%
    font-weight: 400
hr
    background-color light-grey
    height: 1px
    width: 100%
    margin-top: calc(30px + 1px)
    border 0

section.preparation
    background-color rose-white
    padding: 21px 24px;
    border-radius 12px
    margin-top: 2rem;
    margin-left: 32px 
    margin-right: 32px 
    margin-bottom: 30px
    h2
        color dark-raspberry
        font-family Outfit, sans-serif
        margin-bottom: .875rem
        font-size 1.25rem
        letter-spacing -0.19px;
    ul li 
        list-style-type: none
        padding-left: 40px
        position relative
    ul li:before
        content: "•"
        color dark-raspberry
        margin-left: 7px;
        font-size: 19px
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
    ul li:not(:last-child)
        margin-bottom: 8px

section.ingredients
    margin-top: 28px
    margin-left: 32px 
    margin-right: 32px 
    h2
        font-size 1.75rem
        font-family Young Serif, serif
        color nutmeg
        margin-bottom: 18px;
        font-weight 400
    ul li 
        list-style-type: none
        padding-left: 40px
        position relative
    ul li:before
        content: "•"
        color nutmeg
        margin-left: 7px;
        font-size: 19px
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
    ul li:not(:last-child)
        margin-bottom: 8px;
    
section.instructions
    margin-top: 27px
    margin-left: 32px 
    margin-right: 32px 
    h2
        margin-bottom: 18px
        color: #854632;
        font-family: Young Serif, serif;
        font-size: 28px;
        font-weight: 400;
    ol 
        list-style: none
        counter-reset: item;
    ol li 
        padding-left: 40px
        position: relative;
    ol li::before
        content: counter(item) ". ";
        counter-increment: item;
        margin-left: 8px;
        position: absolute;
        left: 0;
        font-weight: 700
        color: nutmeg
    ol li:not(:last-child)
        margin-bottom: 8px;

section.nutrition
    margin-top: 27px
    margin-left: 32px 
    margin-right: 32px 
    h2
        font-size: 28px
        font-family: "Young Serif", serif
        color: nutmeg
        font-weight: 400
        margin-bottom: 18px;
    p
        font-size: 1rem
        font-family: Outfit, sans-serif
        color: wenge-brown
        line-height: 150%
        font-weight: 400
    table
        margin-top: 12px
        width: 100%
        font-size: 1rem
        font-family: Outfit, sans-serif
        color: wenge-brown
        line-height: 150%
        font-weight: 400
        border-collapse: collapse
        tr
            margin-bottom: 6px
        tr td
            width: 50%
            padding: 12px 0 11px 0
        tr:not(:last-child)
            border-bottom: 1px solid light-grey
        td:nth-child(odd)
            text-indent: 32px 
        td:nth-child(even)
            text-indent: 8px 
            color: nutmeg
            font-weight: 700

@media screen and (min-width: 768px)
    .card
        border-radius: 24px
        margin-top: 123px
        margin-bottom: 124px
        padding: 40px 40px 29px 40px
    figure
        img 
            border-radius 12px
    header
        margin-top 1.75rem
        gap 15px
        h1
            font-size: 40px
            line-height: unset
    header
    section.preparation
    section.ingredients
    section.instructions
    section.nutrition
        margin-left: 0
        margin-right: 0

    section.preparation
        margin-bottom: 1.75rem
        padding: 25px 1.75rem 27px 1.75rem;